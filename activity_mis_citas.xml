<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.MisCitasActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_goneMarginBottom="50dp">


        <TextView
            android:id="@+id/lblMisCitasTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="15dp"
            android:text="Mis citas"
            android:textSize="32sp"
            android:textStyle="bold" />


        <CalendarView
            android:id="@+id/calendMisCitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="13dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/lblfechaCita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="10dp"
            android:text="26 de junio"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/lblDetalleCita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="VacunaciÃ²n / Perro"
            android:textSize="18dp"
            android:padding="15dp"
            tools:ignore="TextSizeCheck"
            android:background="#E6D6ED"/>


        <TextView
            android:id="@+id/lblProximaCita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:text="Proxima cita"
            android:textSize="30dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/lblFechaProxima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:text="10 de junio"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/lblDetalleFechaProxima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:text="VACUNACION / PERRO2"
            android:textSize="20dp"
            android:background="#E6D6ED"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>